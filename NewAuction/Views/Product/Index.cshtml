@model NewAuction.Models.Product
@{
    ViewBag.Title = "Index";

    string str = "";
    foreach(var bet in Model.Bet)
    {
        str += @Model.User.UserName.ToString() + " made a bet " + bet.Price;
        str += "\n\r";
    }
}

<div style="width:100%">
    <h2 style="text-align:center">@Model.Name</h2>
    <p style="text-align:center">@Model.Description</p>
    <div style="margin:0 auto">
        <img style="height:300px" src ="@Model.Image" alt="no image" />
    </div>
    <h1>Current price: @Model.SoldPrice</h1>
    <p class="text-danger">@ViewBag.Error</p>
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post">
            <input placeholder="Make your bet" type="number" name="bet" />
            <input type="number" name="productId" style="display:none" value="@Model.ID"/>
            <input type="submit" />
        </form>
    }
        <textarea style="width:100%; height:300px" disabled>
            @str
        </textarea>
</div>

